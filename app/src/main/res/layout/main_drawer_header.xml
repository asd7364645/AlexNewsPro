<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">

    <ImageView
        android:src="@mipmap/main_drawer_header_bg"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.newspro.alexnewspro.customviews.CircleImageView
        android:id="@+id/md_header_img"
        android:layout_width="@dimen/main_img_size"
        android:layout_height="@dimen/main_img_size"
        android:src="@mipmap/header_my_img"
        app:civ_border_color="@android:color/black"
        app:civ_border_width="2dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/md_header_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/md_header_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Alex"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:padding="5dp"
        android:text="登录 >"
        android:textSize="@dimen/large_text_size"
        android:layout_width="wrap_content"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:id="@+id/md_header_login_tv"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_alignBottom="@+id/md_header_img"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>