<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_cardview"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="3dp"
    app:cardElevation="5dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:id="@+id/news_item_img"
            android:layout_width="@dimen/news_item_img_size"
            android:layout_height="@dimen/news_item_img_size"
            android:contentDescription="@string/app_name" />

        <TextView
            android:lines="1"
            android:id="@+id/news_item_title"
            style="@style/LargeTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/news_item_img"
            android:layout_toRightOf="@id/news_item_img" />

        <TextView
            android:lines="1"
            android:id="@+id/news_item_author"
            style="@style/MiddleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_item_title"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/news_item_img"
            android:layout_toRightOf="@id/news_item_img" />

        <TextView
            android:id="@+id/news_item_date"
            style="@style/SmallTextStyle"
            android:layout_below="@id/news_item_title"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>